@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="container body-content">
        <form class="loginform">
            <h3 style="text-align:center;">Iniciar sesión</h3>
            <h4 style="text-align:center;">Sistema de control estadístico</h4>
            <p style="text-align:center;">
                <br />
                <img src="../Content/images/logo.png" width="120" />
            </p>
            <p>
                <br />
            </p>
            <div class="form-group">
                <input type="text" name="Usuario" placeholder="Usuario" class="form-control" />
            </div>
            <div class="form-group">
                <input type="password" placeholder="Clave" class="form-control" />
            </div>
            <div class="form-group" style="text-align: right;">
                <button class="btn">Iniciar sesión</button>
            </div>
        </form>
        <hr />
    </div>
    <footer>
        <a>Reporte estadístico</a> | <a>Calendario de actividades</a>
    </footer>

    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
</body>
</html>
