@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="dataform">
    <h3>Ingreso de datos estadísticos - Escuela dominical</h3>
    <hr />
    <div class="form-group">
        <label>
            Fecha
        </label>
        <input class="form-control" id="fecha" type="text" ng-model="vm.EscuelaBiblica.fecha">
    </div>
    <div class="form-group">
        <label>
            Biblias
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.biblias" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>
            Capitulos leídos
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.capitulosLeidos" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>
            Ofrenda
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.ofrenda" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>
            Diezmos
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.diezmos" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>
            Cumpleaños
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.cumpleanos" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>
            Presentes
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.presentes" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>
            Visitas
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.visitas" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>
            Personas evangelizadas
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.personasEvangelizadas" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>
            Maestros
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.maestros" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>
            Cultos familiares
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.cultosFamiliares" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>
            Visitas a hogares
        </label>
        <input class="form-control" type="text" ng-model="vm.EscuelaBiblica.visitasHogares" onkeyup="VerificarEntero(this);" required>
    </div>
    <div class="form-group">
        <label>Clase</label>
        <select class="form-control" ng-model="vm.EscuelaBiblica.clase">
            <option ng-repeat="ec in vm.Clase" value="{{ec.id}}">{{ec.descripcion}}</option>
        </select>
    </div> 
    <div class="form-group" style="text-align: center;">
        <button class="btn btn-primary" ng-click="vm.Save('escuela','new')">Guardar</button>
    </div>
</form>