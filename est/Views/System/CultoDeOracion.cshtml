@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form role="form" class="dataform">
    <h3>Ingreso de datos estadísticos - Culto de oración</h3>
    <hr/>
    <div class="form-group">

        <label>
            Fecha
        </label>
        <input class="form-control" type="date" id="fecha" name="Fecha" required>


    </div>
    <div class="form-group">

        <label>
            Niños/as en templo
        </label>
        <input class="form-control" type="text" name="NinosEnTemplo">


    </div>
    <div class="form-group">

        <label>
            Niños/as en clase
        </label>
        <input class="form-control" type="text" name="NinosEnClase">


    </div>
    <div class="form-group">

        <label>
            Maestros
        </label>
        <input class="form-control" type="text" name="Maestros">


    </div>
    <div class="form-group">

        <label>
            Adolescentes en el templo
        </label>
        <input class="form-control" type="text" name="AdolescentesEnTemplo">


    </div>
    <div class="form-group">

        <label>
            Jovenes en el templo
        </label>
        <input class="form-control" type="text" name="JovenesEnTemplo">


    </div>
    <div class="form-group">

        <label>
            Adultos en el templo
        </label>
        <input class="form-control" type="text" name="AdultosEnTemplo">


    </div>
    <div class="form-group">

        <label>
            Ujieres en servicio
        </label>
        <input class="form-control" type="text" name="Ujieres">


    </div>
    <div class="form-group">

        <label>
            Personas fuera del templo
        </label>
        <input class="form-control" type="text" name="PersonasFueraDelTemplo">


    </div>
    <div class="form-group">

        <label>
            Comentarios y observaciones
        </label>
        <textarea class="form-control" name="Comentarios"></textarea>


    </div>
    <div class="form-group" style="text-align: center;">
        <button class="btn btn-primary">Guardar</button>
    </div>
</form>