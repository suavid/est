@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form role="form" class="dataform" style="background: white; padding: 30px;">
    <div layout="row" layout-xs="column">
        <div flex style="padding: 15px;">
            <md-datepicker ng-model="vm.DevocionalDominical.fecha" md-placeholder="Fecha"></md-datepicker>
            <br /><br /><br />
            <md-input-container class="md-block" flex-gt-xs>
                <label>
                    Sala cuna
                </label>
                <input class="form-control" type="text" name="SalaCuna" ng-model="vm.DevocionalDominical.salaCuna" onkeyup="VerificarEntero(this);" required>

            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Parvulos
                </label>
                <input class="form-control" type="text" name="Parvulos" ng-model="vm.DevocionalDominical.parvulos" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Principiantes
                </label>
                <input class="form-control" type="text" name="Principiantes" ng-model="vm.DevocionalDominical.principiantes" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
        </div>
        <div flex style="padding: 15px;">
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Primarios
                </label>
                <input class="form-control" type="text" name="Primarios" ng-model="vm.DevocionalDominical.primarios" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Jardin infantil
                </label>
                <input class="form-control" type="text" name="JardinInfantil" ng-model="vm.DevocionalDominical.jardinInfantil" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Adultos (ya sea hombres, mujeres, jovenes y/o adolescentes) DENTRO DEL TEMPLO
                </label>
                <input class="form-control" type="text" name="AdultosEnTemplo" ng-model="vm.DevocionalDominical.adultosEnTemplo" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Ujieres desarrollando su ministerio
                </label>
                <input class="form-control" type="text" name="Ujieres" ng-model="vm.DevocionalDominical.ujieres" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
        </div>
        <div flex style="padding: 15px;">
            <md-input-container class="md-block" flex-gt-xs>
                <label>
                    Adultos (ya sea hombres, mujeres, jovenes y/o adolescentes) FUERA DEL TEMPLO, Autorizadas y No Autorizadas
                </label>
                <input class="form-control" type="text" name="AdultosFueraDelTemplo" ng-model="vm.DevocionalDominical.adultosFueraDelTemplo" onkeyup="VerificarEntero(this);" required>

            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>
                <label>
                    Comentarios y observaciones
                </label>
                <textarea class="form-control" name="Comentarios" ng-model="vm.DevocionalDominical.comentarios"></textarea>

            </md-input-container>
            <md-button class="md-raised md-primary" ng-click="vm.Save('devocional','new')">Guardar</md-button>
        </div>
    </div>
</form>