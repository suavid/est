@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form role="form" class="dataform" style="background: white; padding: 30px;">
    <div layout="row" layout-xs="column">
        <div flex style="padding: 15px;">
            <md-datepicker ng-model="vm.Vigilia.fecha" md-placeholder="Fecha"></md-datepicker>
            <br /><br /><br />
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Niños/as en templo
                </label>
                <input class="form-control" type="text" name="NinosEnTemplo" ng-model="vm.Vigilia.ninosEnTemplo" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Niños/as en clase
                </label>
                <input class="form-control" type="text" name="NinosEnClase" ng-model="vm.Vigilia.ninosEnClase" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Maestros
                </label>
                <input class="form-control" type="text" name="Maestros" ng-model="vm.Vigilia.maestros" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
        </div>
        <div flex style="padding: 15px;">
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Adolescentes en el templo
                </label>
                <input class="form-control" type="text" name="AdolescentesEnTemplo" ng-model="vm.Vigilia.adolescentesEnTemplo" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Jovenes en el templo
                </label>
                <input class="form-control" type="text" name="JovenesEnTemplo" ng-model="vm.Vigilia.jovenesEnTemplo" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Adultos en el templo
                </label>
                <input class="form-control" type="text" name="AdultosEnTemplo" ng-model="vm.Vigilia.adultosEnTemplo" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Ujieres en servicio
                </label>
                <input class="form-control" type="text" name="Ujieres" ng-model="vm.Vigilia.ujieres" onkeyup="VerificarEntero(this);" required>


            </md-input-container>
        </div>
        <div flex style="padding: 15px;">
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Personas fuera del templo
                </label>
                <input class="form-control" type="text" name="PersonasFueraDelTemplo" ng-model="vm.Vigilia.personasFueraDelTemplo" onkeyup="VerificarEntero(this);" required>

            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>

                <label>
                    Comentarios y observaciones
                </label>
                <textarea class="form-control" name="Comentarios" ng-model="vm.Vigilia.comentarios"></textarea>


            </md-input-container>
            <md-button class="md-raised md-primary" ng-click="vm.Save('vigilia','new')">Guardar</md-button>
        </div>
    </div>
</form>