@{
    ViewBag.Title = "Censo";
}

<form role="form" class="dataform" style="background: white; padding: 30px;">
    <div layout="row" layout-xs="column">
        <div flex style="padding: 15px;">
            <md-input-container class="md-block" flex-gt-xs>
                <label>Nombres *</label>
                <input type="text" class="form-control" ng-model="vm.Persona.nombre">
            </md-input-container>

            <md-input-container class="md-block" flex-gt-xs>
                <label>Apellidos *</label>
                <input type="text" class="form-control" id="Apellidos" ng-model="vm.Persona.apellido">
            </md-input-container>

            <p>Fecha de Nacimiento *</p>
            <md-datepicker ng-model="vm.Persona.fechaNacimiento" md-placeholder="Fecha"></md-datepicker>

            <md-input-container class="md-block" flex-gt-xs>
                <label>DUI</label>
                <input type="text" class="form-control" onkeyup="mascara(this, '-', patron_dui, true)" ng-model="vm.Persona.dui" id="Dui">
            </md-input-container>
        </div>
        <div flex style="padding: 15px;">
            <br />
            <md-autocomplete ng-disabled="false"
                             md-no-cache="true"
                             md-selected-item="vm.profesionOficioSeleccionado"
                             md-search-text-change="vm.searchTextChange(vm.searchText)"
                             md-search-text="vm.searchText"
                             md-selected-item-change="vm.selectedItemChange(item)"
                             md-items="item in vm.ListadoProfesiones"
                             md-item-text="item.display"
                             md-min-length="0"
                             placeholder="Profesión u oficio">
                <md-item-template>
                    <span md-highlight-text="vm.searchText" md-highlight-flags="^i">{{item.display}}</span>
                </md-item-template>
                <md-not-found>
                    No hay registros
                </md-not-found>
            </md-autocomplete>
            <br />
            <md-input-container class="md-block" flex-gt-xs>
                <label>Dirección *</label>
                <input type="text" class="form-control" ng-model="vm.Persona.direccion" id="Direccion">
            </md-input-container>

            <br />
            <md-autocomplete ng-disabled="false"
                             md-no-cache="true"
                             md-selected-item="vm.sectorSeleccionado"
                             md-search-text-change="vm.searchTextChange2(vm.searchText2)"
                             md-search-text="vm.searchText2"
                             md-selected-item-change="vm.selectedItemChange2(item)"
                             md-items="item in vm.ListadoSectores"
                             md-item-text="item.display"
                             md-min-length="0"
                             placeholder="Sector">
                <md-item-template>
                    <span md-highlight-text="vm.searchText2" md-highlight-flags="^i">{{item.display}}</span>
                </md-item-template>
                <md-not-found>
                    No hay registros
                </md-not-found>
            </md-autocomplete>
            <br />

            <md-input-container class="md-block" flex-gt-xs>
                <label>Estado Civil *</label>
                <md-select class="form-control" ng-model="vm.Persona.estadoCivil">
                    <md-option ng-repeat="ec in vm.EstadoCivil" value="{{ec.id}}">{{ec.descripcion}}</md-option>
                </md-select>
            </md-input-container>
        </div>
        <div flex style="padding: 15px;">
            <md-input-container class="md-block" flex-gt-xs>
                <label>Teléfono</label>
                <input type="tel" class="form-control" onkeyup="mascara(this, '-', patron_telefono, true)" ng-model="vm.Persona.telefono" id="Telefono"
                       placeholder="Teléfono residencial">
            </md-input-container>

            <md-input-container class="md-block" flex-gt-xs>
                <label>Celular</label>
                <input type="tel" class="form-control" onkeyup="mascara(this, '-', patron_telefono, true)" ng-model="vm.Persona.celular" id="Celular"
                       placeholder="Teléfono móvil">
            </md-input-container>



            <md-input-container class="md-block" flex-gt-xs>
                <label>Tipo de Miembro *</label>
                <md-select class="form-control" ng-model="vm.Persona.miembro">
                    <md-option ng-repeat="ec in vm.Membresia" value="{{ec.id}}">{{ec.descripcion}}</md-option>
                </md-select>
            </md-input-container>

            <md-input-container class="md-block" flex-gt-xs>
                <label>Ministerio *</label>
                <md-select multiple class="form-control" ng-model="vm.ministeriosSeleccionados">
                    <md-option ng-repeat="ec in vm.Ministerio" value="{{ec.id}}">{{ec.descripcion}}</md-option>
                </md-select>
            </md-input-container>

            <md-input-container class="md-block" flex-gt-xs>
                <label>Sexo *</label>
                <md-select class="form-control" ng-model="vm.Persona.sexo">
                    <md-option ng-repeat="ec in vm.Sexo" value="{{ec.id}}">{{ec.descripcion}}</md-option>
                </md-select>
            </md-input-container>
            <br />
            <md-button class="md-raised md-primary" ng-click="vm.Save('persona','new')">Guardar</md-button>
        </div>
    </div>
</form>