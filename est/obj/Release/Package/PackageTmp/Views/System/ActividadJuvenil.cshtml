@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form role="form" class="dataform" style="background: white; padding: 30px;">
    <div layout="row" layout-xs="column">
        <div flex style="padding: 15px;">
            <md-datepicker ng-model="vm.ActividadJuvenil.fecha" md-placeholder="Fecha"></md-datepicker>
            <br /><br /><br />
            <md-input-container class="md-block" flex-gt-xs>
                <label>
                    Total de asistencia
                </label>
                <input class="form-control" type="text" name="JovenesEnTemplo" ng-model="vm.ActividadJuvenil.jovenesEnTemplo" onkeyup="VerificarEntero(this);" required>
            </md-input-container>
            <md-input-container class="md-block" flex-gt-xs>
                <label>
                    Comentarios y observaciones
                </label>
                <textarea class="form-control" name="Comentarios" ng-model="vm.ActividadJuvenil.comentarios"></textarea>
            </md-input-container>
            <md-button class="md-raised md-primary" ng-click="vm.Save('juvenil','new')">Guardar</md-button>
        </div>
        <div flex style="padding: 15px;"></div>
        <div flex style="padding: 15px;"></div>
    </div>
</form>