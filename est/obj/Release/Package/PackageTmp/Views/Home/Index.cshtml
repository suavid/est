@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css">
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body ng-app="Estadistica" ng-controller="SistemaController as vm">
    <md-content layout-padding>
        <div layout="row" layout-xs="column">
            <div flex></div>
            <div flex style="border: solid 1px #d3d3d3; padding: 30px; background: white;">
                <form>
                    <h3 style="text-align:center;">Iniciar sesión</h3>
                    <h4 style="text-align:center;">Sistema de control estadístico</h4>
                    <p style="text-align:center;">
                        <br />
                        <img src="../Content/images/logo.png" width="120" />
                    </p>
                    <div layout-gt-sm="row">
                        <md-input-container class="md-block" flex-gt-sm>
                            <label>Usuario</label>
                            <input ng-model="vm.Usuario">
                        </md-input-container>
                    </div>
                    <div layout-gt-sm="row">
                        <md-input-container class="md-block" flex-gt-sm>
                            <label>Contraseña</label>
                            <input type="password" ng-model="vm.Clave">
                        </md-input-container>
                    </div>
                    <div class="form-group" style="text-align: center;">
                        <md-button class="md-raised md-primary" ng-click="vm.ValidarUsuario();">Iniciar sesión</md-button>
                    </div>
                </form>
            </div>
            <div flex></div>
        </div>
    </md-content>
    <footer style="padding-top: 10px;">
        <a href="/System/InicioReporte">Reporte estadístico</a>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.2/angular-route.js"></script>
    <script type="text/javascript" src="~/Scripts/main.js"></script>
    <script type="text/javascript" src="~/Scripts/sistema.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
</body>
</html>